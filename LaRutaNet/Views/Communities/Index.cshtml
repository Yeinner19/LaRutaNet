@model IEnumerable<LaRutaNet.Models.Community>

@{
    ViewData["Title"] = "Comunidades";
}

<style>
    .btn-coral {
        background-color: #ff6961 !important;
        color: white !important;
        border-radius: 10px;
        border: none;
        transition: 0.3s ease;
    }

        .btn-coral:hover {
            background-color: #e65a54 !important;
        }

    .table-header-coral {
        background-color: #ff6961 !important;
        color: white !important;
    }

    .btn-action-sm {
        border-radius: 8px !important;
        padding: 4px 10px !important;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Listado de Comunidades</h2>
        <a asp-action="Create" class="btn btn-coral px-4 shadow-sm">+ Crear Nueva</a>
    </div>

    <div class="card shadow-lg rounded-3">
        <div class="card-body p-0">

            <table class="table table-hover mb-0">
                <thead class="table-header-coral">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Active)</th>
                        <th>@Html.DisplayNameFor(model => model.AllowsPosts)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>@Html.DisplayNameFor(model => model.DateOfCreation)</th>
                        <th>@Html.DisplayNameFor(model => model.DeletedAt)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th style="width: 170px;">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(_ => item.Active)</td>
                            <td>@Html.DisplayFor(_ => item.AllowsPosts)</td>
                            <td>@Html.DisplayFor(_ => item.Category)</td>
                            <td>@Html.DisplayFor(_ => item.DateOfCreation)</td>
                            <td>@Html.DisplayFor(_ => item.DeletedAt)</td>
                            <td>@Html.DisplayFor(_ => item.Description)</td>
                            <td>@Html.DisplayFor(_ => item.Name)</td>

                            <td class="d-flex gap-1">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info btn-action-sm">Detalles</a>

                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning btn-action-sm">Editar</a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-action-sm">Eliminar</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
