@model LaRutaNet.Models.Community

@{
    ViewData["Title"] = "Crear Comunidad";
}

<h2 class="mb-4">Crear Nueva Comunidad</h2>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="card p-4 shadow-sm rounded-3">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- NOMBRE -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Nombre de la comunidad</label>
                <input asp-for="Name" class="form-control" placeholder="Ej: Fitness Total" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- DESCRIPCIÓN -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label fw-bold">Descripción</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe el objetivo de la comunidad"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- CATEGORÍA -->
            <div class="form-group mb-4">
                <label asp-for="Category" class="form-label fw-bold">Categoría</label>
                <select asp-for="Category" class="form-control">
                    <option value="">-- Selecciona una categoría --</option>
                    <option value="FITNESS">Fitness</option>
                    <option value="NUTRITION">Nutrición</option>
                    <option value="PERSONAL_DEVELOPMENT">Desarrollo Personal</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- BOTÓN -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    Crear Comunidad
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a asp-action="Index" class="text-decoration-none">
                ⬅ Volver al listado
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
