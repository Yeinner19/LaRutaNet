@model LaRutaNet.Models.Community

@{
    ViewData["Title"] = "Editar Comunidad";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm rounded">
                <div class="card-body">

                    <h3 class="text-center mb-4">Editar Comunidad</h3>

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />

                        <!-- Categoría -->
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label fw-semibold"></label>
                            <select id="category" name="category" class="form-control" required>
                                <option value="">Seleccione una categoría</option>
                                <option value="NUTRITION">NUTRICIÓN</option>
                                <option value="PERSONAL_DEVELOPMENT">DESARROLLO PERSONAL</option>
                                <option value="FITNESS">FITNESS</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Describe la comunidad..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Nombre -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control"
                                   placeholder="Nombre de la comunidad" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ← Volver
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Guardar Cambios
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
