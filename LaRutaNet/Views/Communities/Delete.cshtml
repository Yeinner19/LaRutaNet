@model LaRutaNet.Models.Community

@{
    ViewData["Title"] = "Eliminar Comunidad";
}

<div class="delete-container">
    <div class="delete-card shadow-sm">
        <h2 class="delete-title">¿Estás seguro que deseas eliminar esta comunidad?</h2>
        <p class="delete-warning">Esta acción no se puede deshacer.</p>

        <dl class="row delete-dl">
            <dt class="col-sm-3">Activo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Active)</dd>

            <dt class="col-sm-3">Permite Posts</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.AllowsPosts)</dd>

            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Category)</dd>

            <dt class="col-sm-3">Fecha Creación</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DateOfCreation)</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Description)</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

            <dt class="col-sm-3">Creador</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Creator.Id)</dd>
        </dl>

        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn-delete-confirm">
                Eliminar definitivamente
            </button>

            <a asp-action="Index" class="btn-back">
                Cancelar
            </a>
        </form>
    </div>
</div>
