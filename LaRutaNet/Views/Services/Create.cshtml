@model LaRutaNet.Models.Service

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-center text-white" style="background-color:#ff6961;">
                    <h3 class="fw-bold mb-0">Nuevo Servicio</h3>
                </div>

                <div class="card-body p-4">

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Type" class="form-label fw-semibold"></label>
                            <select asp-for="Type" class="form-select shadow-sm">
                                <option value="">Seleccione un tipo</option>
                                <option value="NUTRICION">Nutrición</option>
                                <option value="ACTIVIDAD_FISICA">Actividad Física</option>
                                <option value="DEPORTE">Deporte</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                ← Volver
                            </a>

                            <button type="submit" class="btn text-white rounded-pill px-4 shadow-sm" style="background-color:#ff6961;">
                                Crear
                            </button>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
