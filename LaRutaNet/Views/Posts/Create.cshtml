@model LaRutaNet.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Post</h1>

<h4>Post</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- CONTENIDO -->
            <div class="form-group">
                <label asp-for="Contenido" class="control-label"></label>
                <input asp-for="Contenido" class="form-control" />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>

            <!-- TYPE -->
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" id="typeSelect">
                    <option value="">-- Selecciona una categoría --</option>
                    <option value="COMMUNITY">Comunidad</option>
                    <option value="SERVICE">Servicio</option>
                    <option value="USER">Usuario</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- COMMUNITY -->
            <div class="form-group" id="communityDiv" style="display:none">
                <label asp-for="CommunityId" class="control-label"></label>
                <select asp-for="CommunityId" class="form-control" asp-items="ViewBag.CommunityId">
                    <option value="">-- Seleccione una comunidad --</option>
                </select>
            </div>

            <!-- SERVICE -->
            <div class="form-group" id="serviceDiv" style="display:none">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId">
                    <option value="">-- Seleccione un servicio --</option>
                </select>
            </div>

            <!-- USER -->
            <div class="form-group" id="userDiv" style="display:none">
                <label asp-for="UsuarioDestinoId" class="control-label"></label>
                <select asp-for="UsuarioDestinoId" class="form-control" asp-items="ViewBag.UsuarioDestinoId">
                    <option value="">-- Seleccione un usuario --</option>
                </select>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const typeSelect = document.getElementById("typeSelect");
        const communityDiv = document.getElementById("communityDiv");
        const serviceDiv = document.getElementById("serviceDiv");
        const userDiv = document.getElementById("userDiv");

        typeSelect.addEventListener("change", function () {
            communityDiv.style.display = "none";
            serviceDiv.style.display = "none";
            userDiv.style.display = "none";

            if (this.value === "COMMUNITY") {
                communityDiv.style.display = "block";
            }
            else if (this.value === "SERVICE") {
                serviceDiv.style.display = "block";
            }
            else if (this.value === "USER") {
                userDiv.style.display = "block";
            }
        });
    </script>
}
