@model IEnumerable<LaRutaNet.Models.Post>

@{
    ViewData["Title"] = "Posts";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-uppercase" style="color:#ff6961;">
            <i class="bi bi-card-text me-2"></i> Listado de Posts
        </h1>
        <a asp-action="Create" class="btn text-white rounded-pill px-4 shadow-sm" style="background-color:#ff6961;">
            + Crear Nuevo Post
        </a>
    </div>

    <hr />

    <!-- Posts de Comunidades -->
    <h2 class="fw-semibold mb-3" style="color:#ff6961;">Posts de Comunidades</h2>
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <table class="table table-hover align-middle table-bordered">
                <thead class="text-center text-white" style="background-color:#ff6961;">
                    <tr>
                        <th>Contenido</th>
                        <th>Fecha Creación</th>
                        <th>Comunidad</th>
                        <th>Autor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(p => p.Type == "COMMUNITY"))
                    {
                        <tr class="text-center">
                            <td>@item.Contenido</td>
                            <td>@item.FechaCreacion</td>
                            <td>@item.Community?.Name</td>
                            <td>@item.Author?.Id</td>
                            <td class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-white rounded-pill" style="background-color:#ff6961;">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Posts de Servicios -->
    <h2 class="fw-semibold mb-3" style="color:#ff6961;">Posts de Servicios</h2>
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-body">
            <table class="table table-hover align-middle table-bordered">
                <thead class="text-center text-white" style="background-color:#ff6961;">
                    <tr>
                        <th>Contenido</th>
                        <th>Fecha Creación</th>
                        <th>Servicio</th>
                        <th>Autor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(p => p.Type == "SERVICE"))
                    {
                        <tr class="text-center">
                            <td>@item.Contenido</td>
                            <td>@item.FechaCreacion</td>
                            <td>@item.Service?.Name</td>
                            <td>@item.Author?.Id</td>
                            <td class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-white rounded-pill" style="background-color:#ff6961;">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Posts de Usuarios -->
    <h2 class="fw-semibold mb-3" style="color:#ff6961;">Posts de Usuarios</h2>
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle table-bordered">
                <thead class="text-center text-white" style="background-color:#ff6961;">
                    <tr>
                        <th>Contenido</th>
                        <th>Fecha Creación</th>
                        <th>Usuario Destino</th>
                        <th>Autor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(p => p.Type == "USER"))
                    {
                        <tr class="text-center">
                            <td>@item.Contenido</td>
                            <td>@item.FechaCreacion</td>
                            <td>@item.UsuarioDestino?.Username</td>
                            <td>@item.Author?.Id</td>
                            <td class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-white rounded-pill" style="background-color:#ff6961;">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>