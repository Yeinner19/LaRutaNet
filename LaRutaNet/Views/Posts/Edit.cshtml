@model LaRutaNet.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-center text-white" style="background-color:#ff6961;">
            <h2 class="fw-bold mb-0">Editar Post</h2>
            <p class="mb-0">Actualiza la información del post seleccionado</p>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- CONTENIDO -->
                <div class="mb-3">
                    <label asp-for="Contenido" class="form-label fw-semibold"></label>
                    <input asp-for="Contenido" class="form-control shadow-sm" />
                    <span asp-validation-for="Contenido" class="text-danger small"></span>
                </div>

              
                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-semibold"></label>
                    <select asp-for="Type" class="form-control shadow-sm" id="typeSelect">
                        <option value="">-- Selecciona una categoría --</option>
                        <option value="COMMUNITY">Comunidad</option>
                        <option value="SERVICE">Servicio</option>
                        <option value="USER">Usuario</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

       
                <div class="mb-3" id="communityDiv" style="display:none">
                    <label asp-for="CommunityId" class="form-label fw-semibold"></label>
                    <select asp-for="CommunityId" class="form-control shadow-sm" asp-items="ViewBag.CommunityId">
                        <option value="">-- Seleccione una comunidad --</option>
                    </select>
                </div>

                <div class="mb-3" id="serviceDiv" style="display:none">
                    <label asp-for="ServiceId" class="form-label fw-semibold"></label>
                    <select asp-for="ServiceId" class="form-control shadow-sm" asp-items="ViewBag.ServiceId">
                        <option value="">-- Seleccione un servicio --</option>
                    </select>
                </div>

                <div class="mb-3" id="userDiv" style="display:none">
                    <label asp-for="UsuarioDestinoId" class="form-label fw-semibold"></label>
                    <select asp-for="UsuarioDestinoId" class="form-control shadow-sm" asp-items="ViewBag.UsuarioDestinoId">
                        <option value="">-- Seleccione un usuario --</option>
                    </select>
                </div>
               
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">← Volver a la lista</a>
                    <input type="submit" value="Guardar Cambios" class="btn text-white rounded-pill px-4 shadow-sm" style="background-color:#ff6961;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const typeSelect = document.getElementById("typeSelect");
        const communityDiv = document.getElementById("communityDiv");
        const serviceDiv = document.getElementById("serviceDiv");
        const userDiv = document.getElementById("userDiv");

        typeSelect.addEventListener("change", function () {
            communityDiv.style.display = "none";
            serviceDiv.style.display = "none";
            userDiv.style.display = "none";

            if (this.value === "COMMUNITY") {
                communityDiv.style.display = "block";
            }
            else if (this.value === "SERVICE") {
                serviceDiv.style.display = "block";
            }
            else if (this.value === "USER") {
                userDiv.style.display = "block";
            }
        });
    </script>
}