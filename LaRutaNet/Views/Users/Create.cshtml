@model LaRutaNet.Models.User

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 rounded-3">
                <!-- Header con color rojo pastel -->
                <div class="card-header text-center text-white" style="background-color:#ff6961;">
                    <h3 class="fw-bold mb-0">Crear Usuario</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Role" value="CLIENT" />
                        <input type="hidden" asp-for="Active" value="1" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control shadow-sm" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Username" class="form-label fw-semibold"></label>
                                <input asp-for="Username" class="form-control shadow-sm" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                                <input asp-for="FirstName" class="form-control shadow-sm" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SecondName" class="form-label fw-semibold"></label>
                                <input asp-for="SecondName" class="form-control shadow-sm" />
                                <span asp-validation-for="SecondName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-semibold"></label>
                                <input asp-for="LastName" class="form-control shadow-sm" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SecondLastName" class="form-label fw-semibold"></label>
                                <input asp-for="SecondLastName" class="form-control shadow-sm" />
                                <span asp-validation-for="SecondLastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label"></label>
                                <select id="Gender" name="Gender" asp-for="Gender" class="form-control" required>
                                    <option value="">Seleccione una categoría</option>
                                    <option value="M">MASCULINO</option>
                                    <option value="F">FEMENINO</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-semibold"></label>
                                <input type="password" asp-for="Password" class="form-control shadow-sm " aria-required="true" />
                                <span asp-validation-for="Password" class="text-danger small "></span>
                            </div>



                            <div class="col-md-6 mb-3">
                                <label asp-for="Height" class="form-label fw-semibold"></label>
                                <input asp-for="Height" class="form-control shadow-sm" />
                                <span asp-validation-for="Height" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Weight" class="form-label fw-semibold"></label>
                                <input asp-for="Weight" class="form-control shadow-sm" />
                                <span asp-validation-for="Weight" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                ← Volver
                            </a>
                            <button type="submit" class="btn text-white rounded-pill px-4 shadow-sm" style="background-color:#ff6961;">
                                Crear Usuario
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}